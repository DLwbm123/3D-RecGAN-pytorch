{
    "name": "3DRecGAN",
    "n_gpu": "1,3",

    "arch": {
        "type": "RecGAN"
    },
    "data_loader": {
        "type": "original_3DRecGAN",
        "args":{
            "data_dir": "/home/data/3d/3D-RecGAN_Data/",
            "test_dir": "/home/data/3d/3D-RecGAN_Data/",
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max loss",
        "early_stop": 4,

        "tensorboard": true
    }
}
